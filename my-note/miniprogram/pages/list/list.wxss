/** 书摘样式 **/
.digest-book {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  height: 204rpx;
  background-color: #f4f5f7;
  padding: 26rpx 28rpx;
  margin: 24rpx 0 0;
}

.digest-book-title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

.digest-book-score {
  margin-top: 14rpx;
}

.digest-book-detail {
  display: -webkit-box;
  margin-top: 14rpx; 
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.digest-book-cover {
  width: 102rpx;
  height: 148rpx;
  flex: 0 0 102rpx;
  margin-right: 28rpx;
}

.digest-book-info {
  flex: 1;
  font-size: 20rpx;
  color: #737373;
  overflow:hidden;
}