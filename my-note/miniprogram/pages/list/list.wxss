/** 神评论样式 **/
.comment-img {
  width: 100%;
  height: 364rpx;
  margin: 36rpx 0 0;
  background-color: #f4f5f7;
}

.comment {
  font-size: 32rpx;
  margin: 0 0 13rpx;
  line-height: 1.5;
}

.comment-quote {
  width: 28rpx;
  height: 46rpx;
}

.comment-quote--left {
  margin-right: 6rpx;
}

.comment-quote--right {
  margin-left: 6rpx;
}

/** 时间样式 */
.time {
  font-size: 32rpx;
  padding: 16rpx 0 6rpx;
}

.time-date {
  font-size: 60rpx;
}

.time-hour {
  margin-left: 20rpx;
}

.detail {
  padding: 0 36rpx;
  margin-bottom: 88rpx;
}

/** 按钮样式 **/
.add {
  position: fixed;
  bottom: 0;
  width: 400rpx;
  height: 300rpx;
  left: 50%;
  margin-left: -200rpx;
}

.add-item, .add-icon {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #33c9ff;
  border-radius: 50%;
  color: #fff;
}

